<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">新規投稿</h1>
    <%= form_tag posts_create_path do%>
      <div class="form center">
        <div class="form-plan">
          <p style="font-size: 24px; color:white; background-color:#00BFFF">Plan</p>
          <textarea name="content-plan"></textarea>
        </div>
        <div class="form-do">
          <p style="font-size: 24px; color:white; background-color:#FF6600">Do</p>
          <textarea name="content-do"></textarea>
        </div>
        <div class="form-check">
          <p style="font-size: 24px; color:white; background-color:#99CC66">Check</p>
          <textarea name="content-check"></textarea>
        </div>
        <div class="form-Action">
          <p style="font-size: 24px; color:white; background-color:#FF99CC">Action</p>
          <textarea name="content-action"></textarea>
        </div>
        <input type="submit" value="投稿">
      </div>
    <% end %>
  </div>
</div>